<?xml version="1.0" encoding="utf-8"?>
<Project 
  ToolsVersion="12.0" 
  DefaultTargets="Build" 
  xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
>
  <Import Project="$(MxbuildDir)root.props"/>

  <!--BuildVersion-->
  <PropertyGroup>
    <BuildMajorVersion>0</BuildMajorVersion>
    <BuildMinorVersion>1</BuildMinorVersion>
    <BuildPatchVersion>0</BuildPatchVersion>
    <BuildVersion>$(BuildMajorVersion).$(BuildMinorVersion).$(BuildPatchVersion)</BuildVersion>
  </PropertyGroup>

  <!--shim-->
  <PropertyGroup>
    <ShimInclude>$(ShimDir)**\*.csproj</ShimInclude>
  </PropertyGroup>
  <PropertyGroup Condition="'$(BuildTarget)'=='build' OR '$(BuildTarget)'=='rebuild'">
    <ShimInitialProject>$(IdProj)</ShimInitialProject>
    <ShimFinalProject>$(PublishProj)</ShimFinalProject>
  </PropertyGroup>

</Project>